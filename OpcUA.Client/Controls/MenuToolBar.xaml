<UserControl x:Class="OpcUA.Client.MenuToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:OpcUA.Client"
             mc:Ignorable="d"
             x:Name="Toolbar"
             Height="30"
             d:DesignHeight="30" d:DesignWidth="500">
    <ToolBar>
        <!--<Button x:Name="TbStart" ToolTip="Start communication">
            <fa:ImageAwesome Icon="PlayCircle"/>
        </Button>-->
        <Button x:Name="TbStop" 
                ToolTip="Stop communication"
                Command="{Binding DisconnectSessionCommand}">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="StopCircle"/>
                <TextBlock VerticalAlignment="Center" Text="Disconnect"/>
            </StackPanel>
        </Button>
    </ToolBar>
</UserControl>
<UserControl x:Class="OpcUA.Client.MenuToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:OpcUA.Client"
             mc:Ignorable="d"
             x:Name="Toolbar"
             d:DesignHeight="30" d:DesignWidth="500">
    <ToolBar Height="30">
        <Button x:Name="TbStart" ToolTip="Start communication">
            <fa:ImageAwesome Icon="PlayCircle"/>
        </Button>
        <Button x:Name="TbStop" ToolTip="Stop communication">
            <fa:ImageAwesome Icon="StopCircle"/>
        </Button>
    </ToolBar>
</UserControl>
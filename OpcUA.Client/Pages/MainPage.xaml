<local:BasePage x:TypeArguments="core:MainViewModel" x:Class="OpcUA.Client.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OpcUA.Client"
      xmlns:core="clr-namespace:OpcUA.Client.Core;assembly=OpcUA.Client.Core"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900">

    <Border Background="{StaticResource ForegroundLightBrush}">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <local:MenuBar/>
                <local:MenuToolBar/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TabControl
                    Grid.Column="0"
                    HorizontalAlignment="Left" 
                    DockPanel.Dock="Left">

                    <TabItem Header="TreeView">
                        <local:TreeView/>
                    </TabItem>
                    <TabItem Header="PLC info">

                    </TabItem>
                    <TabItem Header="Server info">

                    </TabItem>
                </TabControl>
                <TabControl Grid.Column="1">
                    <TabItem Header="Node Attributes">
                        <DataGrid HorizontalAlignment="Left" 
                                  Width="300px" 
                                  AutoGenerateColumns="false"
                                  ItemsSource="{Binding SelectedNode}" Margin="0,1,0,-1">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Header="Attribute" Binding="{Binding Attribute}"/>
                                <DataGridTextColumn Width="*" Header="Value" Binding="{Binding Value}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </Grid>
        </DockPanel>
    </Border>
</local:BasePage>

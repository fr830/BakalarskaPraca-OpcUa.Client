<UserControl x:Class="OpcUa.Client.WPF.MenuToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:OpcUa.Client.WPF"
             mc:Ignorable="d"
             x:Name="Toolbar"
             Height="30"
             d:DesignHeight="30" d:DesignWidth="500">
    <ToolBar>
        <!--<Button x:Name="TbStart" ToolTip="Start communication">
            <fa:ImageAwesome Icon="PlayCircle"/>
        </Button>-->
        <Button ToolTip="Stop communication"
                Command="{Binding DisconnectSessionCommand}">
            <fa:ImageAwesome Icon="StopCircle"/>
        </Button>
        <Button ToolTip="Save Project"
                Command="{Binding SaveProjectCommand}">
            <fa:ImageAwesome Icon="Save"/>
        </Button>
    </ToolBar>
</UserControl>
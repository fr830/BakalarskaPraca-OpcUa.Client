<Window x:Class="OpcUa.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpcUa.Client.WPF"
        xmlns:core="clr-namespace:OpcUa.Client.Core;assembly=OpcUa.Client.Core"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinWidth="600"
        MinHeight="300"
        Title="OPC UA Client" Height="auto" Width="auto">

    <Frame
        local:NoFrameHistory.Value="True"
        d:DataContext=""
        DataContext="{Binding ApplicationViewModel.CurrentPage,
                                      Source={x:Static core:ViewModelLocator.Instance},
                                      Converter={local:ApplicationPageValueConverter}}"
        Content="{Binding}"
        Background="Transparent"
    />

</Window>
